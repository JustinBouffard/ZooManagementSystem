<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400.0" prefWidth="400.0" style="-fx-background-color: #f9f9f9;"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.zoomanagementsystem.EnclosureController">

    <top>
        <HBox spacing="10.0" style="-fx-background-color: #e3e3e3;">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Label fx:id="lblTitle" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Animal" />
            <Pane HBox.hgrow="ALWAYS" />
            <Button fx:id="btnExit" text="X" />
        </HBox>
    </top>

    <left>
        <VBox alignment="TOP_CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Button fx:id="btnBack" text="Back" />
        </VBox>
    </left>

    <center>
        <VBox alignment="CENTER" spacing="10.0">
            <padding>
                <Insets bottom="20.0" left="10.0" right="80.0" top="20.0" />
            </padding>
            <Label style="-fx-font-weight: bold;" text="Animals in Enclosure:" />
            <ListView fx:id="listAnimals" maxWidth="-Infinity" prefHeight="200.0" prefWidth="180.0" />
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="20.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Button fx:id="btnAdd" text="Add" />
            <Button fx:id="btnDelete" text="Delete">
                <HBox.margin>
                    <Insets right="5.0" />
                </HBox.margin></Button>
        </HBox>
    </bottom>

</BorderPane>
