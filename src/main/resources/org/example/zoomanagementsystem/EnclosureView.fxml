<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="323.0" prefWidth="403.0" style="-fx-background-color: #f9f9f9;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.zoomanagementsystem.EnclosureController">

    <left>
        <VBox alignment="TOP_CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Button fx:id="btnBack" text="Back" />
        </VBox>
    </left>

    <center>
        <VBox alignment="CENTER" prefHeight="300.0" prefWidth="340.0" spacing="10.0">
            <padding>
                <Insets bottom="20.0" left="10.0" right="80.0" top="20.0" />
            </padding>
            <Label style="-fx-font-weight: bold;" text="Animals in Enclosure:" />
            <ListView fx:id="listAnimals" maxWidth="-Infinity" prefHeight="200.0" prefWidth="180.0" />
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="20.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Button fx:id="btnAdd" text="Add" />
            <Button fx:id="btnDelete" text="Delete">
                <HBox.margin>
                    <Insets right="5.0" />
                </HBox.margin></Button>
        </HBox>
    </bottom>

</BorderPane>
