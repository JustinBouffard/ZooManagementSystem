<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<VBox alignment="TOP_CENTER" prefHeight="300" prefWidth="400" spacing="10" xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1">
    <HBox alignment="CENTER" spacing="10" VBox.vgrow="NEVER">
        <Button fx:id="openButton" maxWidth="Infinity" text="Open" HBox.hgrow="ALWAYS"/>
        <Button fx:id="backButton" maxWidth="Infinity" text="Back" HBox.hgrow="ALWAYS"/>
        <Button fx:id="closeButton" maxWidth="Infinity" text="Close" HBox.hgrow="ALWAYS"/>
    </HBox>
    <Label style="-fx-font-weight: bold; -fx-font-size: 14;" text="Area Name"/>
    <ListView VBox.vgrow="ALWAYS"/>
    <padding>
        <Insets bottom="10" left="10" right="10" top="10"/>
    </padding>
</VBox>
