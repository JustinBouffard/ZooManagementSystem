<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="323.0" prefWidth="403.0" style="-fx-background-color: #f9f9f9;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.zoomanagementsystem.Controllers.EnclosureViewController">
<BorderPane prefHeight="400.0" prefWidth="500.0" style="-fx-background-color: #f9f9f9;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.zoomanagementsystem.Controllers.EnclosureController">

    <top>
        <VBox spacing="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <HBox spacing="10.0">
                <Label fx:id="lblEnclosureName" style="-fx-font-weight: bold; -fx-font-size: 16;" text="Enclosure Name" />
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="btnClose" prefWidth="80.0" text="Close" />
            </HBox>
            <Button fx:id="btnBack" prefWidth="80.0" text="Back" />
        </VBox>
    </top>

    <center>
        <VBox alignment="TOP_CENTER" prefHeight="300.0" prefWidth="500.0" spacing="10.0">
            <padding>
                <Insets bottom="20.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Label style="-fx-font-weight: bold;" text="Animals in Enclosure:" />
            <ListView fx:id="listAnimals" maxWidth="-Infinity"
                      minWidth="-Infinity" prefHeight="200.0"
                      prefWidth="180.0" style="-fx-control-inner-background: white;" />
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="20.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Button fx:id="btnAdd" prefWidth="80.0" text="Add" />
            <Button fx:id="btnDelete" prefWidth="80.0" text="Delete" />
        </HBox>
    </bottom>

</BorderPane>
